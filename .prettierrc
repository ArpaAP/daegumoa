{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "auto",

  "singleQuote": true,
  "semi": true,
  "trailingComma": "all",

  "printWidth": 120,
  "tabWidth": 2,

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",

    "^(@/components)(.*)$",
    "^(@/pages)(.*)$",

    "^(@/hooks)(.*)$",
    "^(@/services)(.*)$",

    "^(@/assets)(.*)$",
    "^(@/constants)(.*)$",
    "^(@/utils)(.*)$",
    "^(@/styles)(.*)$",

    "^(.*)/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": false
}
